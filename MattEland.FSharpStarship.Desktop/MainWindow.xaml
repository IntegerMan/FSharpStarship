<Window x:Class="MattEland.FSharpStarship.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:desktop="clr-namespace:MattEland.FSharpStarship.Desktop"
        mc:Ignorable="d"
        Title="Modeling a Starship in F#, by Matt Eland (@IntegerMan)" 
        Width="800" Height="600" d:DataContext="{d:DesignInstance desktop:MainWindow}">
    <DockPanel>

        <!-- Footer -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="8"  HorizontalAlignment="Right">
            <Button Padding="8,0"
                    ToolTip="Advances the simulation and updates the display">
                Advance Time
            </Button>
        </StackPanel>

        <!-- Main Window -->
        <ItemsControl ItemsSource="{Binding Tiles}">
            <ItemsControl.Background>
                <ImageBrush ImageSource="Images/SpaceBG.jpeg" Stretch="UniformToFill" />
            </ItemsControl.Background>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border ToolTip="{Binding ToolTip}" 
                            Width="32" Height="32" 
                            Background="{Binding Background}" 
                            BorderBrush="Gray" BorderThickness="1" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <!-- ReSharper disable Xaml.BindingWithContextNotResolved - analysis bug - binding to the actual item, not the larger context -->
                    <Setter Property="Canvas.Left" Value="{Binding PosX}" />
                    <Setter Property="Canvas.Top" Value="{Binding PosY}" />
                    <!-- ReSharper restore Xaml.BindingWithContextNotResolved -->
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
    </DockPanel>
</Window>
