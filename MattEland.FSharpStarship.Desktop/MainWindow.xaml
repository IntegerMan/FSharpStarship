<Window x:Class="MattEland.FSharpStarship.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MattEland.FSharpStarship.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="Modeling a Starship in F#, by Matt Eland (@IntegerMan)" 
        Width="1280" Height="800" 
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
    <DockPanel>

        <!-- Sidebar -->
        <DockPanel DockPanel.Dock="Right" Margin="8" Width="200">

            <!-- Art Credits -->
            <Border DockPanel.Dock="Bottom" 
                    Background="Black" BorderBrush="White" BorderThickness="1" 
                    ToolTip="Artwork by Moon Tribe. Visit https://moon-t.com/ for more information.">
                <StackPanel Orientation="Horizontal" Margin="8,0" HorizontalAlignment="Center">
                    <TextBlock Text="Artwork by " Foreground="White" VerticalAlignment="Center" />
                    <Image Source="Images/MoonTribe.png" Stretch="Uniform" Height="96"></Image>
                </StackPanel>
            </Border>

            <!-- Controls -->
            <StackPanel Orientation="Vertical">

                <Label Target="{Binding ElementName=comboOverlay}">Overlay</Label>
                <ComboBox x:Name="comboOverlay" Margin="0,8" SelectedIndex="0" 
                      ItemsSource="{Binding ViewModes}" 
                      SelectedItem="{Binding SelectedViewMode}">
                </ComboBox>

                <Button Padding="8"
                    Margin="0,8"
                    ToolTip="Advances the simulation and updates the display"
                    Click="AdvanceTime_OnClick">
                    Advance Time
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Main Window -->
        <Grid ClipToBounds="True">
            <Grid.Background>
                <ImageBrush ImageSource="Images/sci-fi-background-blur.png" Stretch="UniformToFill" />
            </Grid.Background>

            <!-- Tiles -->
            <ItemsControl ItemsSource="{Binding Tiles}" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border ToolTip="{Binding ToolTip}" 
                                Width="{Binding TileWidth}" Height="{Binding TileHeight}" 
                                Background="{Binding Background}" 
                                BorderThickness="0">
                            <Rectangle Fill="{Binding OverlayBrush}" Opacity="0.5"></Rectangle>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <!-- ReSharper disable Xaml.BindingWithContextNotResolved - analysis bug - binding to the actual item, not the larger context -->
                        <Setter Property="Canvas.Left" Value="{Binding PosX}" />
                        <Setter Property="Canvas.Top" Value="{Binding PosY}" />
                        <!-- ReSharper restore Xaml.BindingWithContextNotResolved -->
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

            <!-- Game Objects -->
            <ItemsControl ItemsSource="{Binding Objects}" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse ToolTip="{Binding ToolTip}" 
                                Width="{Binding TileWidth}" Height="{Binding TileHeight}" 
                                Fill="{Binding Background}" 
                                Stroke="Gray" StrokeThickness="1" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <!-- ReSharper disable Xaml.BindingWithContextNotResolved - analysis bug - binding to the actual item, not the larger context -->
                        <Setter Property="Canvas.Left" Value="{Binding PosX}" />
                        <Setter Property="Canvas.Top" Value="{Binding PosY}" />
                        <!-- ReSharper restore Xaml.BindingWithContextNotResolved -->
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Grid>
    </DockPanel>
</Window>
